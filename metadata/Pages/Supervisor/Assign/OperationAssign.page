        "Items":
        [{
            "Position": "left",
            "SystemItem": "Cancel",
            "OnPress": "/SAPAssetManager/Actions/Page/CancelPage.action"
        },
        {
            "Position": "right",
            "Text": "/SAPAssetManager/Rules/Supervisor/Assign/OperationAssignButtonCaption.js",
