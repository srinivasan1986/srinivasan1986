        },
        {
            "Controls":
            [{
                "IsAutoResizing": false,
                "IsEditable": true,
                "Value": "",
                "Caption": "$(L,notes)",
                "PlaceHolder": "$(L,notes)",
                "_Name": "TransferNote",
                "_Type": "Control.Type.FormCell.Note"
            }]
        }],
        "_Name": "FormCellContainer",
        "_Type": "Control.Type.FormCellContainer"
    }],
